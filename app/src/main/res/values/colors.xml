<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <color name="primaryColor">#4fc3f7</color>
    <color name="primaryLightColor">#8bf6ff</color>
    <color name="primaryDarkColor">#0093c4</color>
    <color name="secondaryColor">#ffa726</color>
    <color name="secondaryLightColor">#ffd95b</color>
    <color name="secondaryDarkColor">#c77800</color>
    <color name="primaryTextColor">#000000</color>
    <color name="secondaryTextColor">#000000</color>

    <color name="defaultBackgroundColor">@android:color/background_light</color>

    <!-- For colored text; default is black/dark-gray (Day) or white/light-gray (Night) -->
    <color name="primaryTextColoredColor">@color/primaryDarkColor</color>
    <color name="secondaryTextColoredColor">@color/primaryColor</color>

    <!-- Matching colored background -->
    <color name="backgroundColoredColor">@color/defaultBackgroundColor</color>
</resources>